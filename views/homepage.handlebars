{{#each posts as |post|}}
<div class="color-swap box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p class="color-swap">
          <strong class="color-swap">{{post.creator}}</strong> <small class="color-swap">{{post.date_created}}</small>
          <br>
          <strong class="color-swap">{{post.title}}</strong>
          <br>
          {{post.content}}
        </p>
      </div>
      <nav class="level is-mobile">
        <div class="level-left">
          <a class="level-item is-flex is-align-items-center" aria-label="reply" href="/post/{{post.id}}">
            <span class="icon is-small">
              <ion-icon name="chatbubble-outline"></ion-icon>
            </span>
            <span class="is-small">
              {{post.commentCount}}
            </span>
          </a>
        </div>
      </nav>
    </div>
  </article>
</div>
{{/each}}